{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended", ":disableDependencyDashboard"
  ],
  "gitIgnoredAuthors": [
    "githubaction@githubaction.com"
  ],
  "rebaseWhen": "never",
  "packageRules": [
    {
      "matchPackageNames": [
        "*actions**",
        "docker**"
      ],
      "automerge": true
    }
  ],
  "prCreation": "immediate"
}
